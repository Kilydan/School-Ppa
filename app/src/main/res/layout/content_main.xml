<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:weightSum="1">

    <ImageButton
        android:src="@drawable/googlemaps"
        android:id="@+id/googleMaps"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:onClick="onClickMaps"
        android:background="#00000000"
        android:scaleType="fitXY"
        />

    <ImageButton
        android:src="@drawable/youtube"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:id="@+id/imageButton"
        android:layout_below="@+id/googleMaps"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp"
        android:onClick="onClickYoutube"
        />

    <ImageButton
        android:src="@drawable/mail"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:id="@+id/imageButton2"
        android:layout_alignTop="@+id/imageButton"
        android:layout_centerHorizontal="true"
        android:onClick="onClickGmail"/>

    <ImageButton
        android:src="@drawable/facebook"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:id="@+id/imageButton3"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_alignParentEnd="true"
        android:onClick="onClickFacebook"/>

</RelativeLayout>