<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="#ffffff"
    >

    <ImageButton
        android:id="@+id/imageButtonMaps"
        android:src="@drawable/googlemaps"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:onClick="onClickMaps"
        android:background="#00000000"
        android:scaleType="fitXY"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <ImageButton
                android:id="@+id/imageButtonYoutube"
                android:src="@drawable/youtube"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="#00000000"
                android:onClick="onClickYoutube"
                />

            <ImageButton
                android:id="@+id/imageButtonFacebook"
                android:src="@drawable/facebook"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:background="#00000000"
                android:scaleType="center"
                android:onClick="onClickFacebook"/>


        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/imageButtonMail"
                android:src="@drawable/mailicon"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:background="#00000000"
                android:scaleType="centerCrop"
                android:onClick="onClickGmail"
                 />

            t<ImageButton
                android:id="@+id/imageButtonPaint"
                android:src="@drawable/paintlogo"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_marginTop="8dp"
                android:background="#00000000"
                android:scaleType="fitXY"
                android:onClick="onClickPaint"
                 />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2">
            <ImageButton
                android:id="@+id/test1"
                android:src="@drawable/nu"
                android:layout_width="wrap_content"
                android:layout_height="158dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="#00000000"
                android:onClick="onClickNu"
                android:scaleType="centerCrop"

                />



        </LinearLayout>


    </LinearLayout>


    </LinearLayout>

