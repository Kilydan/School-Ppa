<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <ImageButton
        android:id="@+id/imageButtonMaps"
        android:src="@drawable/googlemaps"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:onClick="onClickMaps"
        android:background="#00000000"
        android:scaleType="fitXY"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal">
    <ImageButton
        android:id="@+id/imageButtonYoutube"
        android:src="@drawable/youtube"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="#00000000"
        android:onClick="onClickYoutube"
        />

    <ImageButton
        android:id="@+id/imageButtonFacebook"
        android:src="@drawable/facebook"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:background="#00000000"
        android:scaleType="center"
        android:onClick="onClickFacebook"/>

    <ImageButton
        android:id="@+id/imageButtonMail"
        android:src="@drawable/mailicon"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:background="#00000000"
        android:scaleType="centerCrop"
        android:onClick="onClickGmail"/>

    <ImageButton
        android:id="@+id/imageButtonPaint"
        android:src="@drawable/paintlogo"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginTop="8dp"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:onClick="onClickFacebook"/>
</LinearLayout>


</LinearLayout>