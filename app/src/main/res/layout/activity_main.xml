<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:weightSum="1">

    <ImageButton
        android:src="@drawable/maps"
        android:id="@+id/imageButtonMaps"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:onClick="maps"
        />

    <ImageButton
        android:src="@drawable/youtube"
        android:layout_width="100sp"
        android:layout_height="60sp"
        android:id="@+id/imageButtonYoutube"
        android:layout_below="@+id/imageButtonMaps"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp"
        android:onClick="youtube"
        />

    <ImageButton
        android:src="@drawable/mailicon"
        android:layout_width="100sp"
        android:layout_height="60sp"
        android:id="@+id/imageButtonMail"
        android:layout_alignTop="@+id/imageButtonYoutube"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:src="@drawable/facebook"
        android:layout_width="100sp"
        android:layout_height="60sp"
        android:id="@+id/imageButton3"
        android:layout_alignTop="@+id/imageButtonMail"
        android:layout_alignParentEnd="true" />

</RelativeLayout>